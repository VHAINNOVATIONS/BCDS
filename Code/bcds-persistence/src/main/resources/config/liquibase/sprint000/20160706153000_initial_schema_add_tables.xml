			<column name="updt_dtm" type="timestamp" />
		</createTable>
		
		<addPrimaryKey schemaName="BCDSS_DEV" columnNames="user_id" tableName="SEC_APP_USER" />
	</changeSet>
	
	<changeSet id="20160706153201" author="dhabib">
		<createTable schemaName="BCDSS_DEV" tableName="SEC_APP_USER_ROLE">
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
